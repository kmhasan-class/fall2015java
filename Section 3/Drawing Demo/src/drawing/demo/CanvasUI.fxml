<?import javafx.scene.canvas.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.40" fx:controller="drawing.demo.CanvasUIController">
   <children>
      <VBox layoutX="10.0" layoutY="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Canvas fx:id="drawingCanvas" height="600.0" onMouseClicked="#handleMouseClickAction" onMouseDragged="#handleMouseDragAction" width="800.0" />
            <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                  <ColorPicker fx:id="colorPicker" onAction="#handleColorPickAction" />
                  <Slider />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
